<% if current_user.admin? && !current_user?(user) %>
<h1>用户列表</h1>
<%= will_paginate %>
<table class="table table-bordered table-hover table-condensed">
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= link_to '查看', user %></td>
    <td><%= link_to '编辑', edit_user_path(user) %></td>
    <td><%= link_to '删除', user, method: :delete, data: { confirm: '确定删除吗?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate %>
<%= link_to '创建新用户', new_user_path %>

<% end %>



